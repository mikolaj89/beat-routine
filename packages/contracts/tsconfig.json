{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",

   
    "declaration": true,
    "declarationMap": false,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}